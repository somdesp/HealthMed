{
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "order",
        "ClusterId": "orderCluster",
        "Match": {
          "Path": "/order/{**catch-all}"
        }
      },
      {
        "RouteId": "inventory",
        "ClusterId": "inventoryCluster",
        "Match": {
          "Path": "/inventory/{**catch-all}"
        }
      }
    ],
    "Clusters": {
      "orderCluster": {
        "Destinations": {
          "orderApi": {
            "Address": "http://order-service:80/"
          }
        }
      },
      "inventoryCluster": {
        "Destinations": {
          "inventoryApi": {
            "Address": "http://inventory-service:80/"
          }
        }
      }
    }
  }
}
